server {
    listen       <%= @listen %>;
    server_name  <%= @server_name %>;
    location / {
      root   <%= @root_dir %>;
      index  index.html index.htm;
      try_files $uri $uri/ =404;
    }
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
      root   html;
    }
}